---
interface Props {
  links: { label: string; href: string }[];
}

const { links } = Astro.props;
---

<nav class="header-container">
  <header class="header">
    <ul>
      {
        links.map((link) => (
          <li>
            <a href={link.href} class="menu-item">
              {link.label}
            </a>
          </li>
        ))
      }
      <li>
        <a href="javascript:alert('lightmode already disabled globally')" class="light-mode-switch">[x]</a>
      </li>
    </ul>
  </header>
</nav>

<style>
  .header {
    color: #fff;
    padding: 1rem;
    display: flex;
    bottom: 0;
    left: 0;
    right: 0;
    justify-content: center;
    position: fixed;
    background-color: var(--background-color);
  }

  .header-container {
    display: flex;
    max-width: 100vw;
    padding: 2em;
    margin: 0 auto;
  }

  nav ul {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  nav li {
    margin: 0 2em;
    padding: 0 1rem;
  }

  nav a {
    text-decoration: none;
  }

  .menu-item {
    font-family: monospace;
    font-size: large;
    padding: var(--gap-size);
    border: var(--primary-color) solid var(--border-size);
  }
</style>
